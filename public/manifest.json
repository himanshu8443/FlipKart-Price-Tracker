{
  "manifest_version": 3,
  "name": "FlipTrack",
  "version": "1.0",
  "description": "Track FlipKart product prices and send email alerts.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.flipkart.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "index.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Alt+Shift+Y",
        "default": "Alt+Shift+Y",
        "mac": "Command+Shift+Q",
        "chromeos": "Ctrl+Shift+U",
        "linux": "Ctrl+Shift+Q"
      }
    }
  }
}
